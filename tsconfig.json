{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false, // << ❗ Turn off (since you're using only TS now)
    "outDir": "dist",
    "rootDir": "src", // << 💡 (optional) Helps tsc know where to start from
    "forceConsistentCasingInFileNames": true, // << 💡 avoid cross-platform case errors
    "skipLibCheck": true // << (optional) faster builds by skipping checking node_modules
  },
  "include": ["src/**/*"]
}
