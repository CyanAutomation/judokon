{
  "name": "judokon",
  "version": "1.0.0",
  "type": "module",
  "description": "[![pages-build-deployment](https://github.com/CyanAutomation/judokon/actions/workflows/pages/pages-build-deployment/badge.svg?branch=main)](https://github.com/CyanAutomation/judokon/actions/workflows/pages/pages-build-deployment)",
  "main": "src/game.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node scripts/playwrightServer.js",
    "test": "vitest",
    "test:watch": "vitest",
    "test:ci": "vitest run",
    "test:cov": "vitest run --coverage && npm run coverage:priorities",
    "test:one": "vitest run --threads=false",
    "test:update": "vitest run -u",
    "test:screenshot": "playwright test",
    "test:playwright:integration": "playwright test --config playwright.integration.config.js",
    "test:style": "vitest run --config vitest.style.config.js",
    "test:battles": "vitest run tests/classicBattle tests/pages/battleCLI*.test.js tests/helpers/battle*.test.js tests/integration/battleClassic*.test.js tests/styles/battle*.test.js",
    "test:battles:classic": "vitest run tests/classicBattle tests/integration/battleClassic*.test.js tests/helpers/battle*.test.js tests/styles/battleContrast.test.js",
    "test:battles:cli": "vitest run tests/pages/battleCLI*.test.js tests/styles/battleCLI.focusContrast.test.js",
    "test:battles:shared": "vitest run tests/helpers/battleScoreboard*.test.js",
    "test:battles:watch": "vitest tests/classicBattle tests/pages/battleCLI*.test.js tests/helpers/battle*.test.js tests/integration/battleClassic*.test.js tests/styles/battle*.test.js",
    "test:battles:cov": "vitest run tests/classicBattle tests/pages/battleCLI*.test.js tests/helpers/battle*.test.js tests/integration/battleClassic*.test.js tests/styles/battle*.test.js --coverage",
    "test:components": "vitest run tests/components tests/card",
    "test:components:cards": "vitest run tests/card tests/helpers/card*",
    "test:components:scoreboard": "vitest run tests/components/Scoreboard* tests/helpers/*scoreboard*",
    "test:components:modal": "vitest run tests/components/Modal*",
    "test:pages": "vitest run tests/pages",
    "test:pages:settings": "vitest run tests/pages/settings* tests/helpers/settings*",
    "test:pages:random": "vitest run tests/helpers/randomJudokaPage*",
    "test:helpers": "vitest run tests/helpers --exclude tests/helpers/battle* --exclude tests/helpers/card* --exclude tests/helpers/*scoreboard* --exclude tests/helpers/settings* --exclude tests/helpers/randomJudokaPage*",
    "test:helpers:timers": "vitest run tests/helpers/*imer* tests/helpers/timers",
    "test:data": "vitest run tests/data tests/config",
    "test:rag": "vitest run tests/queryRag tests/helpers/vectorSearch* tests/helpers/queryRag*",
    "test:integration": "vitest run tests/integration",
    "test:accessibility": "vitest run tests/accessibility tests/styles tests/card/*a11y* tests/helpers/*a11y*",
    "test:utils": "vitest run tests/utils tests/helpers/testApi.test.js tests/helpers/integrationHarness.test.js",
    "lint": "npx prettier . --check && npx eslint .",
    "check:contrast": "node scripts/runPa11y.js",
    "prepare": "husky install",
    "validate:data": "node scripts/validateData.js",
    "generate:embeddings": "node --max-old-space-size=8192 scripts/generateEmbeddings.js",
    "pretest": "node scripts/generatePrdIndex.js && node scripts/generateBattleMarkup.mjs",
    "generate:battleMarkup": "node scripts/generateBattleMarkup.mjs",
    "update:codes": "node scripts/updateCodes.mjs",
    "check:jsdoc": "node scripts/run-check-jsdoc.mjs",
    "check:playwright-patterns": "node scripts/check-playwright-patterns.js",
    "sync:agents": "node scripts/syncAgentDocs.mjs",
    "rag:query": "node scripts/queryRagCli.mjs",
    "rag:mcp": "node --max-old-space-size=4096 scripts/mcp-rag-server.mjs",
    "rag:validate": "node scripts/checkRagPreflight.mjs && node scripts/evaluation/evaluateRAG.js && npm run validate:data && node scripts/checkHotPaths.js",
    "rag:prepare:models": "node scripts/prepareLocalModel.mjs",
    "rag:health": "node scripts/ragHealth.mjs",
    "validate:rag:config": "node scripts/validateRagConfig.mjs",
    "check:rag": "node scripts/checkRagModel.mjs",
    "build:offline-rag": "node scripts/buildOfflineRag.mjs",
    "rgs": "bash ./scripts/rgs",
    "coverage:priorities": "node scripts/coveragePriorities.mjs",
    "playwright:long-run-probe": "node scripts/playwright-long-run-probe.mjs",
    "test:value": "node scripts/test-value-evaluator.js",
    "test:value:ci": "CI_ENFORCE_LOW_VALUE=1 node scripts/test-value-evaluator.js",
    "mutate": "stryker run",
    "e2e:value": "node scripts/pw-value-evaluator.js",
    "e2e:value:ci": "CI_ENFORCE_LOW_VALUE=1 node scripts/pw-value-evaluator.js",
    "e2e:flake-scan": "npx playwright test --reporter=json --repeat-each=3 && node scripts/pw-value-evaluator.js",
    "audit:tests": "npm run test:value && npm run e2e:flake-scan",
    "fix-gpg": "bash ./disable_git_gpg_signing.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.56.1",
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/vitest-runner": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "acorn": "^8.15.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-yml": "^1.18.0",
    "estree-walker": "^3.0.3",
    "glob": "^11.1.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "pa11y": "^9.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "vite": "^7.1.11",
    "vitest": "^3.2.4",
    "wcag-contrast": "^3.0.0",
    "yaml-eslint-parser": "^1.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@sentry/browser": "^10.11.0",
    "@xenova/transformers": "^2.17.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.x",
    "beautiful-mermaid": "^0.1.3",
    "dompurify": "^3.0.8"
  }
}
