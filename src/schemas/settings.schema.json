{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://judokon.dev/schemas/settings.schema.json",
  "type": "object",
  "properties": {
    "sound": {
      "type": "boolean",
      "description": "Enable or disable game sound effects."
    },
    "motionEffects": {
      "type": "boolean",
      "description": "Enable animated motion effects."
    },
    "typewriterEffect": {
      "type": "boolean",
      "description": "Animate meditation quotes with a typewriter effect."
    },
    "tooltips": {
      "type": "boolean",
      "default": true,
      "description": "Globally enable or disable UI tooltips."
    },
    "showCardOfTheDay": {
      "type": "boolean",
      "default": true,
      "description": "Display the Card of the Day on the landing screen."
    },
    "displayMode": {
      "type": "string",
      "description": "Visual display mode. Legacy values are normalized to \"dark\" at runtime.",
      "oneOf": [
        { "enum": ["light", "dark"] },
        {
          "const": "retro",
          "deprecated": true,
          "description": "Legacy value retained for compatibility; normalized to \"dark\"."
        },
        {
          "const": "high-contrast",
          "deprecated": true,
          "description": "Legacy alias retained for compatibility; normalized to \"dark\"."
        }
      ]
    },
    "fullNavigationMap": {
      "type": "boolean",
      "description": "Enable the full navigation map overlay."
    },
    "aiDifficulty": {
      "type": "string",
      "enum": ["easy", "medium", "hard"],
      "description": "Difficulty level for AI stat selection.",
      "default": "easy"
    },
    "tooltipIds": {
      "type": "object",
      "description": "Mapping of setting keys to tooltip identifiers.",
      "additionalProperties": { "type": "string" }
    },
    "gameModes": {
      "type": "object",
      "description": "Per-mode enable/disable flags.",
      "additionalProperties": { "type": "boolean" }
    },
    "featureFlags": {
      "type": "object",
      "description": "Experimental feature toggles.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Whether the flag is active."
          },
          "tooltipId": {
            "type": "string",
            "description": "Tooltip identifier for this flag."
          },
          "hidden": {
            "type": "boolean",
            "description": "When true, hide the flag from user-facing settings."
          }
        },
        "required": ["enabled"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "sound",
    "motionEffects",
    "typewriterEffect",
    "tooltips",
    "showCardOfTheDay",
    "displayMode",
    "fullNavigationMap"
  ],
  "additionalProperties": false
}
