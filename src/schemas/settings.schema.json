{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://judokon.dev/schemas/settings.schema.json",
  "type": "object",
  "properties": {
    "sound": {
      "type": "boolean",
      "description": "Enable or disable game sound effects."
    },
    "motionEffects": {
      "type": "boolean",
      "description": "Enable animated motion effects."
    },
    "typewriterEffect": {
      "type": "boolean",
      "description": "Animate meditation quotes with a typewriter effect."
    },
    "displayMode": {
      "type": "string",
      "enum": ["light", "dark", "gray"],
      "description": "Visual display mode."
    },
    "gameModes": {
      "type": "object",
      "description": "Per-mode enable/disable flags.",
      "additionalProperties": { "type": "boolean" }
    },
    "featureFlags": {
      "type": "object",
      "description": "Experimental feature toggles.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Whether the flag is active."
          },
          "label": {
            "type": "string",
            "description": "Human readable label for the flag."
          },
          "description": {
            "type": "string",
            "description": "Brief explanation of the feature."
          }
        },
        "required": ["enabled", "label", "description"],
        "additionalProperties": false
      }
    }
  },
  "required": ["sound", "motionEffects", "typewriterEffect", "displayMode"],
  "additionalProperties": false
}
