{
  "$id": "https://judokon.dev/schemas/commonDefinitions.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Stats": {
      "type": "object",
      "properties": {
        "power": { "type": "integer" },
        "speed": { "type": "integer" },
        "technique": { "type": "integer" },
        "kumikata": { "type": "integer" },
        "newaza": { "type": "integer" }
      },
      "required": ["power", "speed", "technique", "kumikata", "newaza"]
    },
    "CountryCode": {
      "type": "string",
      "enum": [
        "vu",
        "pt",
        "fr",
        "jp",
        "br",
        "us",
        "de",
        "ru",
        "kr",
        "gb",
        "ca",
        "it",
        "es",
        "nl",
        "cn",
        "mn",
        "ge",
        "bt",
        "jm"
      ],
      "description": "ISO 3166-1 alpha-2 country codes"
    },
    "WeightClass": {
      "type": "string",
      "enum": [
        "-60",
        "-66",
        "-73",
        "-81",
        "-90",
        "-100",
        "+100",
        "-48",
        "-52",
        "-57",
        "-63",
        "-70",
        "-78",
        "+78"
      ],
      "description": "IJF weight class identifiers"
    }
  }
}
