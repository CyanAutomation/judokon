{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "description": "Unique identifier for the fable."
      },
      "title": {
        "type": "string",
        "description": "The title of the fable."
      },
      "story": {
        "type": "string",
        "description": "The full text of the fable."
      }
    },
    "required": ["id", "story"],
    "additionalProperties": false
  }
}

